{
  "manifest_version": 2,
  "name": "Auto Reply Extension",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://*.messenger.com/*",
        "*://*.instagram.com/*"
      ],
      "js": ["content_script.js"]
    }
  ],
  "permissions": ["tabs"],
  "browser_action": {
    "default_icon": {
      "16": "sms-popup.png",
      "48": "sms-popup.png"
    }
  }
}
